<!DOCTYPE HTML>
<html>

<head>
    <title>EcoLight</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%- include('../partials/ustylesheets') %>
</head>

<body>

    <%- include('../partials/uheader',{title:"" }) %>

        <div class="container" style="min-height: 500px;">

            <div class="d-flex" style="gap:100px; margin-top: 50px;">
                <div class="flex-grow-0" style="width: 200px; flex-shrink: 0;">
                    <%- include('../partials/usersidebar',{option:"orders"}) %>
                </div>
                <div class="flex-grow-1">
                    <% orderlist.forEach(order=> { %>
                        <a href="/user/orderlist?id=<%= order._id %>">
                        <div
                            style="background-color: rgb(235, 235, 235);  padding: 10px; box-shadow: 0 0 5px rgba(0, 0, 0, 0.3); margin-bottom: 20px;">
                            <div class="d-flex">
                                <div> <img src="/uploads/<%= order.items[0].productId.images[0] %>" width="125"
                                        height="150" alt="Item"></div>
                                <div style="margin-left: 20px;">
                                    <p ><span>
                                            <% if (order.items.length> 1) { %>
                                                <%= order.items[0].productId.name %> and <%= order.items.length - 1 %>
                                                        more items
                                                        <% } else { %>
                                                            <%= order.items[0].productId.name %>
                                                                <% } %>
                                        </span></p>
                                        <p ><span><%= order.orderDate.toLocaleDateString() %> </span> </p>
                                        <p ><span> <%= order.status %> </span> </p>
                                        <p ><span>Total price: <%= order.totalprice %> </span> </p>
                            
                                </div>
                            </div>
                        </div>
                    </a>
                        <% }); %>
                </div>
            </div>

        </div>


        <%- include('../partials/ufooter') %>
</body>

</html>