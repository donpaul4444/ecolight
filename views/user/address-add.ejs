<!DOCTYPE HTML>
<html>

<head>
    <title>EcoLight</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%- include('../partials/ustylesheets') %>
</head>

<body>

    <%- include('../partials/uheader',{title:"" }) %>

        <div class="container" style="min-height: 500px;">

            <div class="d-flex" style="gap:100px; margin-top: 50px;">
                <div class="flex-grow-0" style="width: 200px; flex-shrink: 0;">
                    <%- include('../partials/usersidebar',{option:"address"}) %>
                </div>
                <div class="flex-grow-1">
                    <form method="post" class="colorlib-form" action="/address/add" id="myForm">
                        <h2>Address Details</h2>
                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="fname">First Name</label>
                                    <input type="text" id="fname" class="form-control" placeholder="Your firstname" name="firstname">
                                </div>
                                <span id="spanFname" class="form-text text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="lname">Last Name</label>
                                    <input type="text" id="lname" class="form-control" placeholder="Your lastname" name="lastname">
                                </div>
                                <span id="spanLname" class="form-text text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="fname">Address</label>
                                    <input type="text" id="address" class="form-control"
                                        placeholder="Enter Your Address" name="address">
                                </div>
                                <span id="spanaddress" class="form-text text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="companyname">City</label>
                                    <input type="text" id="towncity" class="form-control" placeholder="City" name="city">
                                </div>
                                <span id="spancity" class="form-text text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="stateprovince">State</label>
                                    <input type="text" id="fname" class="form-control" placeholder="State" name="state">
                                </div>
                                <span id="spanstate" class="form-text text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="lname">Postal Code</label>
                                    <input type="text" id="zippostalcode" class="form-control" placeholder="Postal" name="pincode">
                                </div>
                                <span id="spanpincode" class="form-text text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="email">E-mail Address</label>
                                    <input type="text" id="email" class="form-control" placeholder="E-mail" name="email">
                                </div>
                                <span id="spanemail" class="form-text text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Phone">Mobile Number</label>
                                    <input type="text" id="zippostalcode" class="form-control"
                                        placeholder="Mobile number" name="mobile">
                                </div>
                                <span id="spanmobile" class="form-text text-danger"></span>
                            </div>
                            <div class="col-md-6 mt-3">
                                   <button type="submit" class="btn btn-success" >Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <%- include('../partials/ufooter') %>
        <script>
            	const form = document.getElementById("myForm")
            form.addEventListener("submit", (event) => {
			if (form.firstname.value.trim() == "") {
				spanFname.innerHTML = "first name required"
				event.preventDefault()
			}
            if (form.lastname.value.trim() == "") {
				spanLname.innerHTML = "last name required"
				event.preventDefault()
			}
            if (form.address.value.trim() == "") {
				spanaddress.innerHTML = "address required"
				event.preventDefault()
			}
            if (form.city.value.trim() == "") {
				spancity.innerHTML = "city name required"
				event.preventDefault()
			}
            if (form.state.value.trim() == "") {
				spanstate.innerHTML = "state name required"
				event.preventDefault()
			}
            if (form.pincode.value.trim() == "") {
				spanpincode.innerHTML = "pincode required"
				event.preventDefault()
			}
            if (form.email.value.trim() == "") {
				spanemail.innerHTML = "email id required"
				event.preventDefault()
			}
            if (form.mobile.value.trim() == "") {
				spanmobile.innerHTML = "mobile number required"
				event.preventDefault()
			}
        
        })
        </script>
</body>

</html>