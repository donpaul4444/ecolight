<!DOCTYPE HTML>
<html>

<head>
    <title>EcoLight</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%- include('../partials/ustylesheets') %>
</head>

<body>

    <%- include('../partials/uheader',{title:"" }) %>

        <div class="container" style="min-height: 500px;">

            <div class="d-flex" style="gap:100px; margin-top: 50px;">
                <div class="flex-grow-0" style="width: 200px; flex-shrink: 0;">
                    <%- include('../partials/usersidebar',{option:"orders"}) %>
                </div>
                <div class="flex-grow-1">
                    <% if (orderlist.length > 0) { %>
                    <% orderlist.forEach(order=> { %>
                        <% order.items.forEach(item=> { %>
                            <a href="/user/orderlist?orderid=<%= order._id %>&itemid=<%= item._id %>">
                                <div
                                    style="background-color: rgb(235, 235, 235); padding: 10px; box-shadow: 0 0 5px rgba(0, 0, 0, 0.3); margin-bottom: 20px;">
                                    <div class="d-flex">
                                        <div>
                                            <img src="/uploads/<%= item.productId.images[0] %>" width="125" height="150"
                                                alt="Item">
                                        </div>
                                        <div style="margin-left: 20px;">
                                            <p style="font-size: 16px; margin:2px 0; font-weight: 500;">
                                                <%= item.productId.name %>
                                            </p>
                                            <p style="margin:2px 0;"> Order id:<%=order._id %>
                                            </p>
                                            <p style="margin:2px 0;">
                                                <%= order.orderDate.toLocaleDateString() %>
                                            </p>
                                            <p style="margin:2px 0;">
                                                <%= item.status %>
                                            </p>
                                            <p style="margin:2px 0;">
                                                Qnty : <%= item.quantity %>
                                            </p>
                                            <p style="margin:2px 0;">
                                                Total price: <%= item.finalprice %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </a>
                            <% }); %>
                                <% }); %>
                       
                                <% } else { %>  
                                    <span style="font-size: larger ;color:red">Orderlist is empty</span>
                                    <% } %>

                </div>
            </div>

        </div>


        <%- include('../partials/ufooter') %>
</body>

</html>